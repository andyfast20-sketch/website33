{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Run vonage_agent server",
			"type": "shell",
			"command": "${workspaceFolder}\\.venv\\Scripts\\python.exe",
			"args": ["start_server_clean.py"],
			"isBackground": false,
			"problemMatcher": [],
			"presentation": {
				"reveal": "always",
				"panel": "dedicated",
				"clear": true
			},
			"group": "build"
		},
		{
			"label": "Check port 5004",
			"type": "shell",
			"command": "cmd",
			"args": [
				"/d",
				"/c",
				"netstat -ano | findstr :5004"
			],
			"isBackground": false,
			"problemMatcher": []
		},
		{
			"label": "Run vonage_agent server (foreground)",
			"type": "shell",
			"command": "${workspaceFolder}\\.venv\\Scripts\\python.exe",
			"args": ["vonage_agent.py"],
			"isBackground": false,
			"problemMatcher": [],
			"presentation": {
				"reveal": "always",
				"panel": "dedicated",
				"clear": true
			}
		},
		{
			"label": "Run server and capture log",
			"type": "shell",
			"command": "cmd",
			"args": [
				"/d",
				"/c",
				"\"${workspaceFolder}\\.venv\\Scripts\\python.exe\" vonage_agent.py > server_start.log 2>&1"
			],
			"isBackground": false,
			"problemMatcher": []
		},
		{
			"label": "Find PID listening 5004",
			"type": "shell",
			"command": "cmd",
			"args": [
				"/d",
				"/c",
				"netstat -ano | findstr :5004 | findstr LISTENING"
			],
			"isBackground": false,
			"problemMatcher": []
		},
		{
			"label": "Kill server on 5004",
			"type": "shell",
			"command": "cmd",
			"args": [
				"/d",
				"/c",
				"for /f \"tokens=5\" %%a in ('netstat -ano ^| findstr :5004 ^| findstr LISTENING') do taskkill /PID %%a /F"
			],
			"isBackground": false,
			"problemMatcher": []
		},
		{
			"label": "Restart server on 5004 (kill + run)",
			"type": "shell",
			"command": "${workspaceFolder}\\.venv\\Scripts\\python.exe",
			"args": [
				"start_server_clean.py"
			],
			"isBackground": false,
			"problemMatcher": [],
			"presentation": {
				"reveal": "always",
				"panel": "dedicated",
				"clear": true
			}
		},
		{
			"label": "Find PID 5004",
			"type": "shell",
			"command": "cmd",
			"args": [
				"/d",
				"/c",
				"netstat -ano | findstr :5004 | findstr LISTENING"
			],
			"isBackground": false,
			"problemMatcher": []
		}
	]
}